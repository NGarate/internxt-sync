{
  "name": "internxt-sync",
  "version": "0.1.0",
  "description": "A tool to synchronize and upload files to Internxt Drive",
  "type": "module",
  "main": "index.js",
  "dependencies": {
    "chalk": "^5.4.1"
  },
  "scripts": {
    "start": "node .",
    "upload": "node .",
    "build": "node scripts/cross-platform-build.js",
    "prepare": "npm run build",
    "clean": "node scripts/cross-platform-clean.js",
    "test": "bun test src/test",
    "test:watch": "bun test --watch src/test",
    "test:coverage": "bun test --coverage src/test",
    "prepublishOnly": "npm run test && npm run build"
  },
  "bin": {
    "internxt-sync": "index.js"
  },
  "keywords": [
    "internxt",
    "webdav",
    "upload",
    "file-transfer",
    "cli",
    "backup",
    "cloud-storage",
    "file-sync"
  ],
  "author": "ngarate",
  "license": "MIT",
  "engines": {
    "node": ">=14.16.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngarate/internxt-sync.git"
  },
  "bugs": {
    "url": "https://github.com/ngarate/internxt-sync/issues"
  },
  "homepage": "https://github.com/ngarate/internxt-sync#readme",
  "files": [
    "index.js",
    "internxt-sync.ts",
    "src/*.js",
    "src/core/**/*.js",
    "src/utils/**/*.js",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {}
}
