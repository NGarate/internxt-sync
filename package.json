{
  "name": "webdav-backup",
  "version": "0.2.2",
  "description": "WebDAV File Synchronization Tool. Securely uploads and manages files using WebDAVs.",
  "type": "module",
  "main": "dist/node/file-sync.js",
  "types": "dist/index.d.ts",
  "bin": {
    "webdav-backup": "bin-node.js"
  },
  "exports": {
    "import": {
      "bun": "./dist/bun/file-sync.js",
      "default": "./dist/node/file-sync.js"
    },
    "bin": {
      "bun": "./bin-bun.js",
      "default": "./bin-node.js"
    }
  },
  "scripts": {
    "start": "node dist/node/file-sync.js",
    "build": "npm run build:node && npm run build:bun",
    "build:node": "bun build src/main/file-sync.ts --outdir dist/node --target node --format esm",
    "build:bun": "bun build src/main/file-sync.ts --outdir dist/bun --target bun --format esm",
    "prepublishOnly": "npm run build",
    "clean": "powershell -Command \"Remove-Item -Path dist -Recurse -Force -ErrorAction SilentlyContinue\"",
    "test": "bun test --tsconfig-override test-config/tsconfig.test.json --preload ./test-config/setup.ts",
    "test:coverage": "bun test --tsconfig-override test-config/tsconfig.test.json --preload ./test-config/setup.ts --coverage"
  },
  "keywords": [
    "webdav",
    "upload",
    "file-transfer",
    "cli",
    "backup",
    "cloud-storage",
    "file-sync"
  ],
  "author": "ngarate",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**",
    "bin-bun.js",
    "bin-node.js",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/node": "^20.17.30",
    "bun-types": "^1.2.8",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "webdav": "^5.8.0"
  }
}
