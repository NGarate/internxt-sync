{
  "name": "webdav-backup",
  "version": "0.3.0",
  "description": "A simple, fast, and efficient tool for backing up files to a WebDAV server",
  "type": "module",
  "main": "index.ts",
  "bin": {
    "webdav-backup": "./index.ts"
  },
  "scripts": {
    "start": "bun index.ts",
    "test": "bun test",
    "build": "bun build --minify --target bun --sourcemap=linked ./index.ts --outfile ./dist/bin.ts",
    "prepublishOnly": "bun test && bun run build"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "files": [
    "index.ts",
    "src/**/*.ts",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "webdav",
    "upload",
    "file-transfer",
    "cli",
    "backup",
    "cloud-storage",
    "file-sync"
  ],
  "author": "ngarate",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "bun-types": "^1.2.8",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "webdav": "^5.8.0"
  }
}
