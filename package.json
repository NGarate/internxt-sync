{
  "name": "webdav-backup",
  "version": "0.2.4",
  "description": "A simple, fast, and efficient tool for backing up files to a WebDAV server",
  "type": "module",
  "main": "dist/node/file-sync.js",
  "types": "dist/index.d.ts",
  "bin": {
    "webdav-backup": "./dist/bin.js"
  },
  "exports": {
    "import": {
      "bun": "./dist/bun/file-sync.js",
      "default": "./dist/node/file-sync.js"
    }
  },
  "scripts": {
    "start": "node dist/node/file-sync.js",
    "start:bun": "bun dist/bun/file-sync.js",
    "build": "bun run build:node && bun run build:bun && bun run build:bin && bun run postbuild",
    "build:node": "bun build src/main/file-sync.ts --outdir dist/node --target node --format esm",
    "build:bun": "bun build src/main/file-sync.ts --outdir dist/bun --target bun --format esm",
    "build:bin": "bun build bin.ts --outdir dist --target node --format esm",
    "postbuild": "bun run --bun scripts/make-executable.ts",
    "prepublishOnly": "bun run build",
    "clean": "bun run --bun scripts/clean.ts",
    "test": "bun test --tsconfig-override test-config/tsconfig.test.json --preload ./test-config/setup.ts",
    "test:coverage": "bun test --tsconfig-override test-config/tsconfig.test.json --preload ./test-config/setup.ts --coverage"
  },
  "keywords": [
    "webdav",
    "upload",
    "file-transfer",
    "cli",
    "backup",
    "cloud-storage",
    "file-sync"
  ],
  "author": "ngarate",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**",
    "bin.ts",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/node": "^20.17.30",
    "bun-types": "^1.2.8",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "webdav": "^5.8.0"
  }
}
